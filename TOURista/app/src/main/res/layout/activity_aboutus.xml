<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_background"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".AboutusActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="50dp"
        android:src="@drawable/tlogo" />

    <TextView
        android:id="@+id/adress"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:drawableLeft="@drawable/location"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="  Dr.AIT,Bengaluru"
        android:textColor="#141414"
        android:textColorHint="@color/colorAccent"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/phoneno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="  Phone No:98492837534"
        android:drawableLeft="@drawable/call"
        android:textColor="#141414"
        android:textColorHint="@color/colorAccent"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/eemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="  Email:tourista@gmail.com"
        android:drawableLeft="@drawable/mail"
        android:textColor="#141414"
        android:textColorHint="@color/colorAccent"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/web"
        android:layout_width="368dp"
        android:layout_height="31dp"
        android:layout_marginTop="6dp"
        android:drawableLeft="@drawable/web"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="  Website: https://www.dr-ait.org"
        android:textColor="#141414"
        android:textColorHint="@color/colorAccent"
        android:textSize="20sp" />



    <TextView
        android:id="@+id/webs"
        android:layout_width="368dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="@string/webs"
        android:textStyle="bold|italic"
        android:textColor="#141414"
        android:textColorHint="@color/cardview_dark_background"
        android:textSize="20sp" />


</LinearLayout>